{
    "name": "Return Zero - Flutter Dev Container",
    // Reference your custom Dockerfile
    "build": {
        "dockerfile": "Dockerfile"
    },
    // Recommended VS Code extensions for Android/Kotlin/Java development
    "customizations": {
        "vscode": {
            "extensions": [
                "Dart-Code.flutter",
                "Dart-Code.dart-code",
                "ms-azuretools.vscode-containers",
                "pkief.material-icon-theme",
                "zhuangtongfa.material-theme"
            ]
        }
    },
    // Forward the ADB port (5037) to your local machine for easier physical device debugging
    "forwardPorts": [
        3000,
        8080
    ],
    // Command to verify the setup after the container is built
    "postCreateCommand": "flutter doctor && flutter pub get"
}